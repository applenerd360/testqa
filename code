
#include <iostream>
#include <unistd.h>
#include <fstream>

using namespace std;

string user_name;
char u_president;
char u_ceogoogle;

char try_again;
int score;

int main(int argc, const char * argv[]) {
   
    cout << "Hello there! What's your name?  ";
    cin >> user_name;
    cout << endl;
    cout << endl;
    cout << endl;
    cout << endl;
    cout << "These are the Game Rules" << endl;
    sleep(2.32);
    cout << endl;
    cout << "1. To answer questions, enter it in a Capital Letter" << endl;
    sleep(3.19863859111133435154315453113531156186781);
    cout << endl;
    cout << "2. Be Honest!" << endl;
    sleep(2.72);
    cout << endl;
    cout << endl;
   
    
    // __________________________________________________________________________
    
    
    cout << endl;
    cout << "Question 1... ";
    sleep(1);
    cout << "Who was the 45th President? A(Pres. Trump) B(Pres. Obama) C(Pres. Clinton) D(Pres. Bush)" << endl;
    cin >> u_president;
    cout << endl;
    if(u_president == 'A') {
        cout << "Correct" << endl;
        score += 1 ;
    } else {
        cout << "False!" << endl;
    }
    cout << endl;
    
    
    cout << endl;
    cout << "Question 2... ";
    sleep(1);
    cout << "Who is the Chief Executive Officer of Google? A(Bill Gates) B(Sundar Pichai) C(Ruth Porat) D(Gary Briggs)" << endl;
    cin >> u_ceogoogle;
    cout << endl;
    if(u_ceogoogle == 'B') {
        cout << "Correct" << endl;
        score += 1 ;
    } else {
        cout << "False!" << endl;
    }
    cout << endl;
    
    
    cout << "Score :  " << score << " !";
    cout << endl;
    if (score > 5) {
        cout << "Well Done!" << endl;
    } else {
        cout << "You didn't get enough points!" << endl;
    }
    return 0;
}
